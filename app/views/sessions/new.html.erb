<h1>Login page</h1>
<%= form_tag '/login' do %>

   <div class="field">
     <%= label_tag :email %>
     <%= text_field_tag :email %>
   </div>

   <div class="field">
     <%= label_tag :password %>
     <%= password_field_tag :password %>
   </div>
   <%= submit_tag "Login" %>

 <% end %>
<%= link_to 'Register', register_path%>
